@model FinalShopOnline.Models.Order

@{
    ViewBag.Title = "Edit";
}
@Html.Partial("_GapWithHeaderPartial")
<div class="row">
    <div class="flat-divider d30px"></div>
</div>
@using (Html.BeginForm())
{
    @Html.Hidden("Code", Model.Code)
    @Html.Hidden("CreatedDate", Model.CreatedDate)
    @Html.Hidden("ContactName", Model.ContactName)
    @Html.Hidden("ContactAddress", Model.ContactAddress)
    @Html.Hidden("ContactPhone", Model.ContactPhone)
    @Html.AntiForgeryToken()

    <div class="col-md-3"></div>
    <div class="form-horizontal col-md-6">
        <h2>Cập nhật trạng thái đơn hàng</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Status, null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
        <div class="trove">
            <p>@Html.ActionLink("Trở về", "Index")</p>
        </div>
    </div>
    <div class="col-md-3"></div>
}
<div class="row">
    <div class="flat-divider d40px"></div>
</div>
