@model IEnumerable<FinalShopOnline.Models.UserComment>

@{
    ViewBag.Title = "Index";
}
@Html.Partial("_GapWithHeaderPartial")
<h2>Tạo ý kiến khách hàng</h2>

<p class="button">
    @Html.ActionLink("Tạo mới", "Create")
</p>
<div class="responsive" style="overflow: scroll">
    <table class="table">
        <tr>
            <th>

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model) {
    <tr>
        <td>
            @if (string.IsNullOrEmpty(item.ImageUrl) == false)
                {
            <img src="@Url.Content(item.ImageUrl)" style="width: 80px" />
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Comment)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.ActionLink("Cập nhật", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Upload Ảnh", "UploadImage", new { id = item.Id }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.Id })
        </td>
    </tr>
}

    </table>
</div>
