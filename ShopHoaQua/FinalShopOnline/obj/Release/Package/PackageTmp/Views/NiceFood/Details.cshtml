@model FinalShopOnline.Models.NiceFood
@{
    ViewBag.Title = "Tin sạch";
}

<div class="page-title-container">
    <div class="parallax has-caption parallax-image2">
        <div class="overlay v1"></div>
        <div class="page-title">
            <div class="container">

            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8" style="height: 100%; box-shadow: 0px -10px 15px rgba(0,0,0,0.2); -webkit-box-shadow: 0px -10px 15px rgba(0,0,0,0.2);">
        <section id="content">
            <div class="container">
                <div class="top-name">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="link-right">
                                <ol class="breadcrumb">
                                    <li><a href="@Url.Action("Index", "Home")">Trang Chủ</a></li>
                                    <li><a>Tin Tức</a></li>
                                    <li><a href="@Url.Action("Index", "NiceFood")">Món ngon mỗi ngày</a></li>
                                </ol>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="main">
                    <div class="row">
                        <div class="col-md-12">
                            <article class="post box-lg">
                                <h2 class="entry-title">@Model.Title</h2>
                                <div class="post-meta">
                                    <span class="post-category"><a style="color: #000000">@Html.Raw(Model.CreateDate)</a></span>
                                    <!-- Go to www.addthis.com/dashboard to customize your tools -->
                                    <div class="addthis_native_toolbox"></div>
                                </div>
                                
                                <div class="post-content">
                                    <p>@Html.Raw(Model.BlogContent)</p>
                                </div>
                                <!-- Go to www.addthis.com/dashboard to customize your tools -->
                                <div class="addthis_native_toolbox"></div>
                            </article>
                        </div>
                    </div>

                </div>
            </div>
        </section>
    </div>
    <div class="col-md-2"></div>
</div>
<div class="row">
    <div class="flat-divider d20px"></div>
</div>
