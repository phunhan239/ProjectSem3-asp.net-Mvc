@using PagedList.Mvc
@model PagedList.IPagedList<FinalShopOnline.Models.NiceFood>
@{
    ViewBag.Title = "Món ngon mỗi ngày";
}

<div class="page-title-container">
    <div class="parallax has-caption parallax-image2">
        <div class="overlay v1"></div>
        <div class="page-title">
            <div class="container">

            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8" style="height: 100%; box-shadow: 0px -10px 15px rgba(0,0,0,0.2); -webkit-box-shadow: 0px -10px 15px rgba(0,0,0,0.2);">
        <section id="content">
            <div class="container">
                <div class="top-name">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="link-right">
                                <ol class="breadcrumb">
                                    <li><a href="@Url.Action("Index", "Home")">Trang Chủ</a></li>
                                    <li><a>Tin Tức</a></li>
                                    <li><a href="@Url.Action("Index", "NiceFood")">Món ngon mỗi ngày</a></li>
                                </ol>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="main">
                    @{
                        var count = 0;
                        var style = "";
                    }

                    @foreach (var item in Model)
                    {
                        count++;
                        var check_style = count % 2;
                        if (check_style != 0)
                        {
                            style = "style-1";
                        }

                        <div class="blog-posts @style">
                            <div class="row">
                                <div class="col-md-12">
                                    <article class="post post-classic">
                                        <div class="post-image">
                                            <div class="image-container">
                                                <a href="@Url.Action("Details", "NiceFood", new { Id = item.Id})"><img src="@Url.Content(item.ImageUrl)" alt=""></a>
                                            </div>
                                        </div>
                                        <div class="post-content">
                                            <h2 class="entry-title"><a href="@Url.Action("Details", "NiceFood", new { Id = item.Id})">@Html.Raw(item.Title)</a></h2>
                                            <div class="post-meta">
                                                <span class="post-category"><a>@Html.Raw(item.CreateDate)</a></span>
                                            </div>
                                            <p>
                                                @Html.Raw(item.HeadContent)
                                            </p>
                                            <a href="@Url.Action("Details", "NiceFood", new { Id = item.Id})" class="btn style4 read-more hover-blue">Read More</a>
                                        </div>
                                    </article>
                                </div>
                            </div>
                        </div>
                        style = "";
                    }

                    <div class="post-pagination">
                        <div class="page-links">
                            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <div class="col-md-2"></div>
</div>
