@using FinalShopOnline.Models
@{
    var db = new ShopOnlineDb();
    var productCertifications = db.SlideImages
        .Where(x => x.Status == "ACTIVE" && x.DisplayPosition == "PRODUCT CERTIFICATION STYLE")
        .OrderBy(x => x.SortOrder).ToList();
}
